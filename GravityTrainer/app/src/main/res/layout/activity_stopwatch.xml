<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dip"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/hangSpin"

        android:layout_centerHorizontal="true"
        android:layout_width="100dip"
        android:layout_height="50dip"


        android:drawSelectorOnTop="true" />

    <TextView
        android:id="@+id/hang"

        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:paddingLeft="75dip"
        android:layout_alignBaseline="@id/hangSpin"
        android:layout_toLeftOf="@id/hangSpin"
        android:layout_alignParentTop="true"
        android:text="Hang for" />



    <TextView
        android:id="@+id/hangSec"

        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_toRightOf="@id/hangSpin"
        android:layout_alignBaseline="@id/hangSpin"
        android:layout_alignParentTop="true"
        android:text="seconds" />

    <Spinner
        android:id="@+id/restSpin"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:layout_below="@id/hangSpin"
        android:layout_centerHorizontal="true"
        android:drawSelectorOnTop="true" />

    <TextView
        android:id="@+id/rest"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/restSpin"
        android:layout_alignBaseline="@id/restSpin"
        android:layout_height="50dip"
        android:paddingLeft="75dip"
        android:layout_below="@id/hangSpin"
        android:text="Rest for" />



    <TextView
        android:id="@+id/restSec"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_toRightOf="@id/restSpin"
        android:layout_alignBaseline="@id/restSpin"
        android:layout_below="@id/hangSpin"
        android:text="seconds" />

    <Spinner
        android:id="@+id/repSpin"
        android:layout_width="100dip"
        android:layout_below="@id/restSpin"
        android:layout_height="50dip"


        android:layout_centerHorizontal="true"
        android:drawSelectorOnTop="true" />


    <TextView
        android:id="@+id/rep"
        android:layout_alignBaseline="@id/repSpin"
        android:paddingLeft="75dip"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_toLeftOf="@id/repSpin"
        android:layout_below="@id/rest"
        android:text="Repeat" />



    <TextView
        android:id="@+id/repTimes"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignBaseline="@id/repSpin"
        android:layout_toRightOf="@id/repSpin"
        android:layout_below="@id/restSec"
        android:text="times" />

    <Button
        android:layout_width="215dip"
        android:layout_centerHorizontal="true"
        android:id="@+id/crushButt"
        android:layout_height="wrap_content"
        android:layout_below="@id/rep"
        android:text="Crush It"
        android:onClick="crush" />

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crushButt"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="75dp"/>

    <TextView
        android:id="@+id/tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clock"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="100dp"/>

</RelativeLayout>
